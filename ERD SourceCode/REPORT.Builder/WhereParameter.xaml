<src:UserControlBase xmlns:CommonControls="clr-namespace:WPF.Tools.CommonControls;assembly=WPF.Tools"  
                     x:Class="REPORT.Builder.WhereParameter"
                     xmlns:src="clr-namespace:WPF.Tools.BaseClasses;assembly=WPF.Tools"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                     xmlns:local="clr-namespace:REPORT.Builder"
                     mc:Ignorable="d" 
                     d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40*" />
            <ColumnDefinition Width="40*" />
            <ColumnDefinition Width="20*" />
        </Grid.ColumnDefinitions>
        
        <CommonControls:ComboBoxTool Grid.Row="0" Grid.Column="0" x:Name="uxTableColumn" />

        <CommonControls:ComboBoxTool Grid.Row="0" Grid.Column="1" x:Name="uxForeignColumn" SelectionChanged="ForeignColumn_Changed" />

        <CommonControls:ComboBoxTool Grid.Row="0" Grid.Column="2" x:Name="uxAndOd" SelectionChanged="AndOr_Changed" />

    </Grid>
</src:UserControlBase>
