<ResourceDictionary xmlns:CommonControls="clr-namespace:WPF.Tools.CommonControls"  x:Class="DoorWay.SpecialTools.TemplateDicitionaryST"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <ControlTemplate x:Key="WatermarkText">
    <Grid x:Name="uxMainGrid" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="0" />
      </Grid.ColumnDefinitions>
      
      <TextBlock x:Name="uxWaterMark" Grid.Column="0" Foreground="DarkGray"  Text="Type Here" Margin="3,0,0,0" HorizontalAlignment="Stretch" />

      <CommonControls:TextBoxItem x:Name="uxUsetText" Grid.Column="0" Background="Transparent" HorizontalAlignment="Stretch" />
    </Grid>
  </ControlTemplate>

</ResourceDictionary>